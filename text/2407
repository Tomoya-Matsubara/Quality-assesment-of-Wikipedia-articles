| rev2 = [[Robert Christgau]]
| rev2Score = A+<ref name=christgau1/>
| rev3 = ''[[Entertainment Weekly]]''
|rev3Score = A<ref>{{harvnb|Flanagan|1991}}</ref>
| rev4 = ''[[Rolling Stone]]''
|rev4Score = {{rating|5|5}}<ref>{{harvnb|Brackett|2004|p=262}}</ref>
| rev5 = ''[[Encyclopedia of Popular Music|Virgin Encyclopedia of Popular Music]]''
|rev5Score = {{rating|3|5}}<ref>{{harvnb|Bob Dylan and The Band: The Basement Tapes}}</ref>
